                              </AnchorPane>
                           </content>
                        </Tab>
                      <Tab fx:id="tabUser" text="USER">
                           <content>
                              <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                 <children>
                                    <TextField layoutX="51.0" layoutY="32.0" prefHeight="26.0" prefWidth="272.0" promptText="Username" />
                                    <PasswordField layoutX="51.0" layoutY="90.0" prefHeight="26.0" prefWidth="272.0" promptText="Password" />
