                        <Image url="@../Images/UTB8VHyqoL2JXKJkSanr7613lVXaw.png" />
                     </image>
                  </ImageView>
               </children>
               <effect>
                  <DropShadow />
               </effect>
            </AnchorPane>
            <AnchorPane layoutX="470.0" layoutY="106.0" prefHeight="433.0" prefWidth="388.0" style="-fx-background-color: #FFF; -fx-background-radius: 10px;">
               <effect>
                  <DropShadow />
               </effect>
